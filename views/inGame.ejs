<div id="inGame">
	<div class="row align-items-center justify-content-md-center">
		<div class="col-md-12">
			<div id="chooseBox">
				<h4>Yayyy It's your turn</h4>
				<div class="btn-group">
					<button
						type="button"
						class="btn btn-danger dropdown-toggle"
						data-bs-toggle="dropdown"
						aria-expanded="false"
					>
						Choose Action
					</button>
					<ul class="dropdown-menu">
						<li>
							<a class="dropdown-item" href="#">Take Bus to 8</a>
						</li>
						<li>
							<a class="dropdown-item" href="#">Take Taxi to 5</a>
						</li>
						<li>
							<a class="dropdown-item" href="#"
								>Something else here</a
							>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>

	<div class="row align-items-center justify-content-md-center">
		<div class="col-md-auto">
			<div class="form-check form-switch" style="margin-top: 10px">
				<input
					class="form-check-input"
					type="checkbox"
					id="flexSwitchCheckChecked"
					checked
					onclick="handleClick(this);"
				/>
				<label class="form-check-label" for="flexSwitchCheckChecked"
					>Players Log</label
				>
			</div>
		</div>
	</div>

	<div class="row align-items-center justify-content-md-center">
		<div class="col-md-auto">
			<div id="mrxBoard">
				<img src="/images/mrx.jpg" />
				<img id="testImg" src="/images/bus3.png" />
			</div>
		</div>
	</div>

	<div class="row align-items-center justify-content-md-center">
		<div class="col-md-12">
			<div id="logBox">
				<table class="table table-striped table-dark">
					<thead>
						<tr>
							<th scope="col">#</th>
							<th scope="col">P1</th>
							<th scope="col">P2</th>
							<th scope="col">P3</th>
							<th scope="col">Mr.X</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<th scope="row">1</th>
							<td>1</td>
							<td>5</td>
							<td>7</td>
							<td>X</td>
						</tr>
						<tr>
							<th scope="row">2</th>
							<td>2</td>
							<td>3</td>
							<td>9</td>
							<td>X</td>
						</tr>
						<tr>
							<th scope="row">3</th>
							<td>10</td>
							<td>21</td>
							<td>199</td>
							<td>35</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
